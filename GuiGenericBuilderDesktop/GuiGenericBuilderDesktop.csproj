<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net10.0-windows</TargetFramework>
    <Nullable>disable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    
    <!-- Application Manifest -->
    <ApplicationManifest>app.manifest</ApplicationManifest>
    
    <!-- Application Info -->
    <AssemblyName>GuiGenericBuilderDesktop</AssemblyName>
    <Version>2.1.0.0</Version>
    <Company>GUI Generic Builder</Company>
    <Product>GUI Generic Builder Desktop</Product>
    <Description>Desktop application for building Supla firmware with GUI-Generic</Description>
    <Copyright>Copyright © 2024-2025</Copyright>
    <NeutralLanguage>en</NeutralLanguage>
    
    <!-- Publisher Information for SmartScreen -->
    <ApplicationRevision>1</ApplicationRevision>
    <PublisherName>GUI Generic Builder Team</PublisherName>
    
    <!-- Strong Name Signing (Assembly Identity) - Only if key file exists -->
    <SignAssembly Condition="Exists('$(ProjectDir)GuiGenericBuilder.snk')">true</SignAssembly>
    <AssemblyOriginatorKeyFile Condition="Exists('$(ProjectDir)GuiGenericBuilder.snk')">GuiGenericBuilder.snk</AssemblyOriginatorKeyFile>
    <DelaySign>false</DelaySign>
    
    <!-- Code Signing Configuration -->
    <CodeSigningEnabled Condition="Exists('$(ProjectDir)GuiGenericBuilder.pfx')">true</CodeSigningEnabled>
    <CertificateFile>$(ProjectDir)GuiGenericBuilder.pfx</CertificateFile>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="builder.json" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="builder.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.4" />
    <PackageReference Include="Serilog" Version="4.2.0" />
    <PackageReference Include="Serilog.Sinks.File" Version="6.0.0" />
    <PackageReference Include="Serilog.Sinks.Debug" Version="3.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\CompilationLib\CompilationLib.csproj" />
  </ItemGroup>

  <!-- Post-build event to sign the executable with Authenticode (if certificate exists) -->
  <Target Name="SignExecutable" AfterTargets="Build" Condition="'$(CodeSigningEnabled)' == 'true' AND '$(Configuration)' == 'Release'">
    <PropertyGroup>
      <SignToolPath Condition="Exists('C:\Program Files (x86)\Windows Kits\10\bin\10.0.22621.0\x64\signtool.exe')">C:\Program Files (x86)\Windows Kits\10\bin\10.0.22621.0\x64\signtool.exe</SignToolPath>
      <SignToolPath Condition="'$(SignToolPath)' == '' AND Exists('C:\Program Files (x86)\Windows Kits\10\bin\10.0.19041.0\x64\signtool.exe')">C:\Program Files (x86)\Windows Kits\10\bin\10.0.19041.0\x64\signtool.exe</SignToolPath>
      <SignToolPath Condition="'$(SignToolPath)' == ''">signtool.exe</SignToolPath>
    </PropertyGroup>
    <Exec Command='"$(SignToolPath)" sign /f "$(CertificateFile)" /p "$(CertificatePassword)" /tr http://timestamp.digicert.com /td sha256 /fd sha256 "$(TargetPath)"' 
          IgnoreExitCode="false"
          ContinueOnError="true" />
    <Message Text="Executable signed successfully: $(TargetPath)" Importance="high" />
  </Target>

</Project>
