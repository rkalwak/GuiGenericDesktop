<Window x:Class="GuiGenericBuilderDesktop.ConfigurationManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuration Manager" 
        Height="700" 
        Width="1000"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0" Margin="10,10,10,0">
            <!-- Saved Configurations Tab -->
            <TabItem Header="Saved Configurations">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="400"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Panel: Configurations List -->
                    <Grid Grid.Column="0" Margin="0,0,10,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <TextBlock Grid.Row="0" 
                                   Text="Saved Configurations" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,12"/>

                        <!-- Configurations List -->
                        <Border Grid.Row="1" 
                                BorderBrush="#CCCCCC" 
                                BorderThickness="1" 
                                CornerRadius="4"
                                Background="White">
                            <Grid>
                                <ListBox x:Name="ConfigurationsListBox"
                                         SelectionMode="Single"
                                         SelectionChanged="ConfigurationsListBox_SelectionChanged"
                                         MouseDoubleClick="ConfigurationsListBox_MouseDoubleClick">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="#DDDDDD" 
                                                    BorderThickness="0,0,0,1" 
                                                    Padding="8"
                                                    Margin="0,0,0,4">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <TextBlock Grid.Row="0" 
                                                               Text="{Binding ConfigurationName}" 
                                                               FontWeight="SemiBold" 
                                                               FontSize="14"/>

                                                    <StackPanel Grid.Row="1" 
                                                                Orientation="Horizontal" 
                                                                Margin="0,4,0,2">
                                                        <TextBlock Text="Saved: " 
                                                                   Foreground="#666666" 
                                                                   FontSize="11"/>
                                                        <TextBlock Text="{Binding SavedDate, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" 
                                                                   Foreground="#666666" 
                                                                   FontSize="11"/>
                                                        <TextBlock Text=" | " 
                                                                   Foreground="#666666" 
                                                                   Margin="4,0,4,0"
                                                                   FontSize="11"/>
                                                        <TextBlock Text="{Binding EnabledFlagKeys.Count, StringFormat='{}Flags: {0}'}" 
                                                                   Foreground="#666666" 
                                                                   FontSize="11"/>
                                                    </StackPanel>

                                                    <StackPanel Grid.Row="2" 
                                                                Orientation="Horizontal" 
                                                                Margin="0,2,0,0">
                                                        <TextBlock Text="{Binding Platform, StringFormat='{}Platform: {0}'}" 
                                                                   Foreground="#666666" 
                                                                   FontSize="10"/>
                                                        <TextBlock Text=" | " 
                                                                   Foreground="#666666" 
                                                                   Margin="4,0,4,0"
                                                                   FontSize="10"/>      
                                                        <TextBlock Text="{Binding ComPort, StringFormat='{}Port: {0}'}" 
                                                                   Foreground="#666666" 
                                                                   FontSize="10"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>

                                <!-- Empty State -->
                                <TextBlock x:Name="EmptyStateText"
                                           Text="No saved configurations found.&#x0a;&#x0a;Use the 'Load from Encoded String' tab to import a configuration."
                                           FontStyle="Italic"
                                           Foreground="#999999"
                                           TextAlignment="Center"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Visibility="Collapsed"
                                           Margin="16"/>
                            </Grid>
                        </Border>

                        <!-- Buttons -->
                        <StackPanel Grid.Row="2" 
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Right" 
                                    Margin="0,16,0,0">
                            <Button x:Name="LoadButton"
                                    Content="Load Selected"
                                    Width="120"
                                    Height="32"
                                    Margin="0,0,8,0"
                                    IsEnabled="False"
                                    Click="LoadButton_Click"/>
                            <Button x:Name="DeleteButton"
                                    Content="Delete"
                                    Width="80"
                                    Height="32"
                                    IsEnabled="False"
                                    Click="DeleteButton_Click"/>
                        </StackPanel>
                    </Grid>

                    <!-- Right Panel: Configuration Details -->
                    <Border Grid.Column="1"
                            BorderBrush="#CCCCCC" 
                            BorderThickness="1"
                            CornerRadius="4"
                            Background="White"
                            Padding="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Details Header -->
                            <TextBlock Grid.Row="0" 
                                       Text="Configuration Details" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,12"/>

                            <!-- Configuration Info -->
                            <StackPanel Grid.Row="1" 
                                        x:Name="ConfigDetailsPanel"
                                        Margin="0,0,0,12"
                                        Visibility="Collapsed">
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Name: " FontWeight="SemiBold" Margin="0,2,8,2"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="DetailNameText" Margin="0,2,0,2"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Platform: " FontWeight="SemiBold" Margin="0,2,8,2"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="DetailPlatformText" Margin="0,2,0,2"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="COM Port: " FontWeight="SemiBold" Margin="0,2,8,2"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="DetailComPortText" Margin="0,2,0,2"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Saved: " FontWeight="SemiBold" Margin="0,2,8,2"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" x:Name="DetailSavedDateText" Margin="0,2,0,2"/>

                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Encoded: " FontWeight="SemiBold" Margin="0,2,8,2" VerticalAlignment="Top"/>
                                    <Grid Grid.Row="4" Grid.Column="1" Margin="0,2,0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox Grid.Column="0" 
                                                 x:Name="DetailEncodedText" 
                                                 FontFamily="Consolas" 
                                                 FontSize="10" 
                                                 TextWrapping="Wrap"
                                                 IsReadOnly="True"
                                                 Background="#F9F9F9"
                                                 BorderBrush="#DDD"
                                                 MaxHeight="80"
                                                 VerticalScrollBarVisibility="Auto"
                                                 Padding="4"/>

                                        <Button Grid.Column="1"
                                                x:Name="CopyEncodedButton"
                                                Content="Copy"
                                                Width="60"
                                                Height="24"
                                                Margin="4,0,0,0"
                                                VerticalAlignment="Top"
                                                Click="CopyEncodedButton_Click"
                                                ToolTip="Copy encoded configuration to clipboard"/>
                                    </Grid>
                                </Grid>
                            </StackPanel>

                            <!-- Flags List -->
                            <Border Grid.Row="2" 
                                    BorderBrush="#DDDDDD" 
                                    BorderThickness="1" 
                                    CornerRadius="4"
                                    Background="#FAFAFA">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0" 
                                            Background="#F0F0F0" 
                                            BorderBrush="#DDDDDD" 
                                            BorderThickness="0,0,0,1"
                                            Padding="8,6">
                                        <TextBlock x:Name="FlagsCountText" 
                                                   Text="Enabled Flags (0)" 
                                                   FontWeight="SemiBold" 
                                                   FontSize="12"/>
                                    </Border>

                                    <ScrollViewer Grid.Row="1" 
                                                  VerticalScrollBarVisibility="Auto"
                                                  Padding="8">
                                        <ItemsControl x:Name="FlagsListBox">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="White" 
                                                            BorderBrush="#E0E0E0" 
                                                            BorderThickness="1" 
                                                            CornerRadius="3"
                                                            Padding="6,4"
                                                            Margin="0,2">
                                                        <TextBlock Text="{Binding}" 
                                                                   FontFamily="Consolas" 
                                                                   FontSize="11"
                                                                   Foreground="#333333"/>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>

                                    <!-- Empty State -->
                                    <TextBlock Grid.Row="1"
                                               x:Name="EmptyFlagsText"
                                               Text="Select a configuration to view enabled flags"
                                               FontStyle="Italic"
                                               Foreground="#999999"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Margin="16"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Load from Encoded String Tab -->
            <TabItem Header="Load from Encoded String">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <TextBlock Text="Load Configuration from Encoded String"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Paste an encoded configuration string to decode and load it."
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,20"
                                   Foreground="#666"/>

                        <TextBlock Text="Encoded Configuration String:"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="EncodedInputTextBox"
                                     Grid.Column="0"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     Height="100"
                                     Padding="8"
                                     FontFamily="Consolas"
                                     VerticalScrollBarVisibility="Auto"/>

                            <Button Grid.Column="1"
                                    Content="Paste"
                                    Width="80"
                                    Padding="10"
                                    Margin="8,0,0,0"
                                    VerticalAlignment="Top"
                                    Click="PasteEncodedButton_Click"
                                    ToolTip="Paste from clipboard"/>
                        </Grid>

                        <!-- Action Buttons Row -->
                        <StackPanel Orientation="Horizontal" Margin="0,15,0,20">
                            <Button x:Name="DecodeButton"
                                    Content="Decode and Preview"
                                    Click="DecodeConfiguration_Click"
                                    Padding="15,10"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Background="#007ACC"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Margin="0,0,10,0"/>

                            <Button x:Name="LoadDecodedButton"
                                    Content="Load This Configuration"
                                    Click="ApplyDecodedConfiguration_Click"
                                    Padding="15,10"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Background="#28A745"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Margin="0,0,10,0"
                                    IsEnabled="False"
                                    ToolTip="Load the decoded configuration into the application"/>

                            <Button x:Name="SaveDecodedButton"
                                    Content="Save to Library"
                                    Click="SaveDecodedConfiguration_Click"
                                    Padding="15,10"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Background="#17A2B8"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    IsEnabled="False"
                                    ToolTip="Save the decoded configuration to your library"/>
                        </StackPanel>

                        <!-- Decoded Results Panel -->
                        <Border x:Name="DecodedResultsPanel" 
                                Visibility="Collapsed"
                                Background="White"
                                BorderBrush="#DDD"
                                BorderThickness="1"
                                CornerRadius="5"
                                Padding="15">
                            <StackPanel>
                                <TextBlock Text="Decoded Configuration" 
                                           FontSize="16" 
                                           FontWeight="Bold"
                                           Margin="0,0,0,10"/>

                                <!-- Stats -->
                                <TextBlock x:Name="DecodedCountTextBlock"
                                           FontSize="12"
                                           Foreground="#666"
                                           Margin="0,0,0,10"/>

                                <!-- Flags List -->
                                <TextBlock Text="Flags:"
                                           FontWeight="SemiBold"
                                           Margin="0,10,0,5"/>
                                <Border BorderBrush="#DDD"
                                        BorderThickness="1"
                                        MaxHeight="300"
                                        CornerRadius="3">
                                    <ListBox x:Name="DecodedFlagsListBox"
                                             Background="#F9F9F9"
                                             BorderThickness="0"
                                             Padding="5"/>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Save Current Configuration Tab -->
            <TabItem Header="Save Current Configuration">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <TextBlock Text="Save Current Configuration"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Save the currently selected build flags to your configuration library."
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,20"
                                   Foreground="#666"/>

                        <Button x:Name="SaveCurrentButton"
                                Content="Save Current Configuration"
                                Click="SaveCurrentConfiguration_Click"
                                Padding="15,10"
                                FontSize="14"
                                FontWeight="SemiBold"
                                Background="#28A745"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Margin="0,0,0,20"
                                HorizontalAlignment="Left"/>

                        <!-- Save Results Panel -->
                        <Border x:Name="SaveResultsPanel" 
                                Visibility="Collapsed"
                                Background="White"
                                BorderBrush="#DDD"
                                BorderThickness="1"
                                CornerRadius="5"
                                Padding="15">
                            <StackPanel>
                                <TextBlock Text="Configuration Saved" 
                                           FontSize="16" 
                                           FontWeight="Bold"
                                           Foreground="#28A745"
                                           Margin="0,0,0,10"/>

                                <!-- Save Details -->
                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Name: " FontWeight="SemiBold" Margin="0,2,8,2"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="SavedNameText" Margin="0,2,0,2"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Flags: " FontWeight="SemiBold" Margin="0,2,8,2"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="SavedFlagCountText" Margin="0,2,0,2"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Platform: " FontWeight="SemiBold" Margin="0,2,8,2"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="SavedPlatformText" Margin="0,2,0,2"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="COM Port: " FontWeight="SemiBold" Margin="0,2,8,2"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" x:Name="SavedComPortText" Margin="0,2,0,2"/>
                                </Grid>

                                <!-- Encoded Section (optional to show) -->
                                <TextBlock Text="Encoded String (for sharing):"
                                           FontWeight="SemiBold"
                                           Margin="0,10,0,5"/>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="SavedEncodedTextBox"
                                             Grid.Column="0"
                                             IsReadOnly="True"
                                             Background="#F9F9F9"
                                             Padding="8"
                                             FontFamily="Consolas"
                                             FontSize="11"
                                             TextWrapping="Wrap"
                                             MinHeight="60"
                                             VerticalScrollBarVisibility="Auto"/>
                                    <Button Grid.Column="1"
                                            Content="Copy"
                                            Click="CopySavedEncoded_Click"
                                            Padding="10,5"
                                            Margin="5,0,0,0"
                                            VerticalAlignment="Top"
                                            ToolTip="Copy encoded string to clipboard"/>
                                </Grid>

                                <TextBlock Text="? Configuration has been saved to your library and is now available in the 'Saved Configurations' tab."
                                           TextWrapping="Wrap"
                                           Foreground="#28A745"
                                           FontStyle="Italic"
                                           Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Info Tab -->
            <TabItem Header="Help">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <TextBlock FontSize="18" FontWeight="Bold" Margin="0,0,0,10">
                            Configuration Manager Help
                        </TextBlock>

                        <TextBlock TextWrapping="Wrap" Margin="0,0,0,20">
                            This tool helps you save, load, and share build configurations.
                        </TextBlock>

                        <Border Background="White" 
                                BorderBrush="#DDD" 
                                BorderThickness="1" 
                                CornerRadius="5" 
                                Padding="15" 
                                Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock FontWeight="Bold" Margin="0,0,0,5" FontSize="14">
                                    Saved Configurations
                                </TextBlock>
                                <TextBlock TextWrapping="Wrap">
                                    View and manage your saved build configurations. Select a configuration to see its details, load it, or delete it.
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <Border Background="White" 
                                BorderBrush="#DDD" 
                                BorderThickness="1" 
                                CornerRadius="5" 
                                Padding="15" 
                                Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock FontWeight="Bold" Margin="0,0,0,5" FontSize="14">
                                    Load from Encoded String
                                </TextBlock>
                                <TextBlock TextWrapping="Wrap">
                                    Paste an encoded configuration string (shared by someone or from a backup) to load it. You can preview the flags before loading, and optionally save it to your library.
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <Border Background="White" 
                                BorderBrush="#DDD" 
                                BorderThickness="1" 
                                CornerRadius="5" 
                                Padding="15" 
                                Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock FontWeight="Bold" Margin="0,0,0,5" FontSize="14">
                                    Save Current Configuration
                                </TextBlock>
                                <TextBlock TextWrapping="Wrap">
                                    Save your currently selected flags to the configuration library with a custom name. The configuration is automatically encoded for easy sharing, and you can access it later from the 'Saved Configurations' tab.
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <TextBlock FontWeight="Bold" Margin="0,20,0,10" FontSize="14">
                            About Encoded Configurations
                        </TextBlock>

                        <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                            Encoded configurations use compression and base64 encoding to create a compact, shareable string that contains all your selected flags.
                        </TextBlock>

                        <TextBlock TextWrapping="Wrap" FontWeight="SemiBold">
                            Features:
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap" Margin="15,5,0,0">
                            - Reversible: Can be decoded back to original flags
                            <LineBreak/>
                            - Compact: Uses GZip compression
                            <LineBreak/>
                            - URL-safe: Safe for sharing in URLs
                            <LineBreak/>
                            - Order-independent: Same flags = same encoding
                            <LineBreak/>
                            - Case-insensitive: Handles mixed case
                        </TextBlock>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Close Button -->
        <Border Grid.Row="1" 
                Background="White" 
                BorderBrush="#DDD" 
                BorderThickness="0,1,0,0" 
                Padding="10">
            <Button Content="Close"
                    Width="100"
                    Height="32"
                    HorizontalAlignment="Right"
                    Click="CloseButton_Click"
                    IsCancel="True"/>
        </Border>
    </Grid>
</Window>
