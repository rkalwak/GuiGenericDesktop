<Window x:Class="GuiGenericBuilderDesktop.ConfigurationNameInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Save Configuration" 
        Height="240" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Save Build Configuration" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Margin="0,0,0,16"/>

        <!-- Configuration Name Label -->
        <TextBlock Grid.Row="1" 
                   Text="Configuration Name:" 
                   FontWeight="SemiBold" 
                   Margin="0,0,0,8"/>

        <!-- Input Section -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBox x:Name="ConfigNameTextBox"
                     Grid.Row="0"
                     Height="32"
                     VerticalContentAlignment="Center"
                     FontSize="12"
                     Margin="0,0,0,8"
                     MaxLength="100"
                     KeyDown="ConfigNameTextBox_KeyDown"/>

            <TextBlock Grid.Row="1"
                       Text="Enter a descriptive name for this configuration (e.g., 'Production ESP32 Sensors')"
                       FontSize="11"
                       Foreground="#666666"
                       TextWrapping="Wrap"/>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,16,0,0">
            <Button x:Name="SaveButton"
                    Content="Save"
                    Width="80"
                    Height="32"
                    Margin="0,0,8,0"
                    Click="SaveButton_Click"
                    IsDefault="True"/>
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Width="80"
                    Height="32"
                    IsCancel="True"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
