<Window x:Class="GuiGenericBuilderDesktop.ConfigurationSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Load Build Configuration" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Panel: Configurations List -->
        <Grid Grid.Column="0" Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Select a Configuration to Load" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Margin="0,0,0,12"/>

        <!-- Configurations List -->
        <Border Grid.Row="1" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                CornerRadius="4"
                Background="White">
            <ListBox x:Name="ConfigurationsListBox"
                     SelectionMode="Single"
                     SelectionChanged="ConfigurationsListBox_SelectionChanged"
                     MouseDoubleClick="ConfigurationsListBox_MouseDoubleClick">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#DDDDDD" 
                                BorderThickness="0,0,0,1" 
                                Padding="8"
                                Margin="0,0,0,4">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" 
                                           Text="{Binding ConfigurationName}" 
                                           FontWeight="SemiBold" 
                                           FontSize="14"/>
                                
                                <TextBlock Grid.Row="1"
                                           Text="{Binding FileName, StringFormat='{}File: {0}'}"
                                           FontFamily="Consolas"
                                           FontSize="9"
                                           Foreground="#888888"
                                           Margin="0,2,0,0"/>
                                
                                <StackPanel Grid.Row="2" 
                                            Orientation="Horizontal" 
                                            Margin="0,4,0,2">
                                    <TextBlock Text="Saved: " 
                                               Foreground="#666666" 
                                               FontSize="11"/>
                                    <TextBlock Text="{Binding SavedDate, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" 
                                               Foreground="#666666" 
                                               FontSize="11"/>
                                    <TextBlock Text=" | " 
                                               Foreground="#666666" 
                                               Margin="4,0,4,0"
                                               FontSize="11"/>
                                    <TextBlock Text="{Binding EnabledFlagKeys.Count, StringFormat='{}Flags: {0}'}" 
                                               Foreground="#666666" 
                                               FontSize="11"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Row="3" 
                                            Orientation="Horizontal" 
                                            Margin="0,2,0,0">
                                    <TextBlock Text="{Binding Platform, StringFormat='{}Platform: {0}'}" 
                                               Foreground="#666666" 
                                               FontSize="10"/>
                                    <TextBlock Text=" | " 
                                               Foreground="#666666" 
                                               Margin="4,0,4,0"
                                               FontSize="10"/>      
                                    <TextBlock Text="{Binding ComPort, StringFormat='{}Port: {0}'}" 
                                               Foreground="#666666" 
                                               FontSize="10"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <!-- Hash Input Section -->
        <StackPanel Grid.Row="2" 
                    Margin="0,12,0,0">
            <TextBlock Text="Or enter a hash manually:" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,4"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox x:Name="HashInputTextBox"
                         Grid.Column="0"
                         Height="28"
                         VerticalContentAlignment="Center"
                         FontFamily="Consolas"
                         FontSize="11"
                         KeyDown="HashInputTextBox_KeyDown"/>
                
                <Button x:Name="PasteHashButton"
                        Grid.Column="1"
                        Content="Paste"
                        Width="60"
                        Height="28"
                        Margin="8,0,0,0"
                        Click="PasteHashButton_Click"
                        ToolTip="Paste hash from clipboard"/>
                
                <Button x:Name="LoadByHashButton"
                        Grid.Column="2"
                        Content="Load by Hash"
                        Width="100"
                        Height="28"
                        Margin="8,0,0,0"
                        Click="LoadByHashButton_Click"/>
            </Grid>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,16,0,0">
            <Button x:Name="LoadButton"
                    Content="Load Selected"
                    Width="120"
                    Height="32"
                    Margin="0,0,8,0"
                    IsEnabled="False"
                    Click="LoadButton_Click"/>
            <Button x:Name="DeleteButton"
                    Content="Delete"
                    Width="80"
                    Height="32"
                    Margin="0,0,8,0"
                    IsEnabled="False"
                    Click="DeleteButton_Click"/>
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Width="80"
                    Height="32"
                    IsCancel="True"
                    Click="CancelButton_Click"/>
        </StackPanel>
        </Grid>
        
        <!-- Right Panel: Configuration Details -->
        <Border Grid.Column="1"
                BorderBrush="#CCCCCC" 
                BorderThickness="1,0,0,0"
                Background="White"
                Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Details Header -->
                <TextBlock Grid.Row="0" 
                           Text="Configuration Details" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Margin="0,0,0,12"/>
                
                <!-- Configuration Info -->
                <StackPanel Grid.Row="1" 
                            x:Name="ConfigDetailsPanel"
                            Margin="0,0,0,12"
                            Visibility="Collapsed">
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Name: " FontWeight="SemiBold" Margin="0,2,8,2"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="DetailNameText" Margin="0,2,0,2"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Platform: " FontWeight="SemiBold" Margin="0,2,8,2"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="DetailPlatformText" Margin="0,2,0,2"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="COM Port: " FontWeight="SemiBold" Margin="0,2,8,2"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="DetailComPortText" Margin="0,2,0,2"/>
                        
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Saved: " FontWeight="SemiBold" Margin="0,2,8,2"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" x:Name="DetailSavedDateText" Margin="0,2,0,2"/>
                        
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Hash: " FontWeight="SemiBold" Margin="0,2,8,2"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" x:Name="DetailHashText" FontFamily="Consolas" FontSize="10" Margin="0,2,0,2" TextWrapping="Wrap"/>
                    </Grid>
                </StackPanel>
                
                <!-- Flags List -->
                <Border Grid.Row="2" 
                        BorderBrush="#DDDDDD" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Background="#FAFAFA">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <Border Grid.Row="0" 
                                Background="#F0F0F0" 
                                BorderBrush="#DDDDDD" 
                                BorderThickness="0,0,0,1"
                                Padding="8,6">
                            <TextBlock x:Name="FlagsCountText" 
                                       Text="Enabled Flags (0)" 
                                       FontWeight="SemiBold" 
                                       FontSize="12"/>
                        </Border>
                        
                        <ScrollViewer Grid.Row="1" 
                                      VerticalScrollBarVisibility="Auto"
                                      Padding="8">
                            <ItemsControl x:Name="FlagsListBox">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White" 
                                                BorderBrush="#E0E0E0" 
                                                BorderThickness="1" 
                                                CornerRadius="3"
                                                Padding="6,4"
                                                Margin="0,2">
                                            <TextBlock Text="{Binding}" 
                                                       FontFamily="Consolas" 
                                                       FontSize="11"
                                                       Foreground="#333333"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                        
                        <!-- Empty State -->
                        <TextBlock Grid.Row="1"
                                   x:Name="EmptyStateText"
                                   Text="Select a configuration to view enabled flags"
                                   FontStyle="Italic"
                                   Foreground="#999999"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="16"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
